# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=60s

# DVR/NVR Configuration
DVR_USERNAME=admin
DVR_PASSWORD=your-dvr-password
DVR_IP=192.168.1.100
DVR_PORT=554

# RTSP Configuration
RTSP_TRANSPORT=tcp
RTSP_TIMEOUT=5000

# WebRTC Configuration
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=
TURN_USERNAME=
TURN_PASSWORD=

# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_URL=https://your-tunnel.trycloudflare.com
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token

# Camera Discovery
AUTO_DISCOVER=true
DISCOVERY_INTERVAL=300000
MAX_CAMERAS=16

# Logging
LOG_LEVEL=info
